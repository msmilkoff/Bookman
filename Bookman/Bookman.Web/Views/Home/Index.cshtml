@model List<Bookman.ViewModels.Home.LatestBookViewModel>

@{
    ViewBag.Title = "Home Page";
}
<br />
<br />
<div class="row">

    <div class="col-sm-3">
        <h2>Genres</h2>
        <ul>
            <li><a href="#"><h4>Fantasy</h4></a></li>
            <li><a href="#"><h4>Science-Fiction</h4></a></li>
            <li><a href="#"><h4>Horror</h4></a></li>
            <li><a href="#"><h4>Non-Fiction</h4></a></li>
            <li><a href="#"><h4>Comedy</h4></a></li>
            <li><a href="#"><h4>Mystery</h4></a></li>
            <li><a href="#"><h4>Classical</h4></a></li>
            <li><a href="#"><h4>Poetry</h4></a></li>
            <li><h4>@Html.ActionLink("All", "All", "Categories")  &raquo;</h4></li>
        </ul>
    </div>

    <div class="container">
        <div class="col-sm-6">

            <h2>Latest books</h2>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="@Url.Content(Model[0].CoverImageUrl)" alt="Cover Image" style="width:100%; height: 460px;">

                        <div class="carousel-caption">
                            <p>@Model[0].Description<</p>
                        </div>
                    </div>

                    <div class="item">
                        <img src="@Url.Content(Model[1].CoverImageUrl)" alt="Cover Image" style="width:100%; height: 460px;">

                        <div class="container">
                            <div class="carousel-caption">
                                <p>@Model[1].Description</p>
                            </div>
                        </div>
                    </div>

                    <div class="item">
                        <img src="@Url.Content(Model[2].CoverImageUrl)" alt="Cover Image" style="width:100%; height: 460px;">

                        <div class="carousel-caption">
                            <p>@Model[2].Description</p>
                        </div>
                    </div>
                </div>

                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>


</div>